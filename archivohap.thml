<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Actividad 6</title>
    <link href="https://fonts.googleapis.com/css2?family=Glegoo:wght@700&family=Montserrat:wght@300&display=swap" rel="stylesheet">
    <style type="text/css">
        body{
            font-family: 'Montserrat', sans-serif;
        }
        img{
            width:100%;
        }
        section{
            display:flex;
            align-items:flex-end;
        }
        .descripcion{
            text-align:center;
        }
        .precio{
            font-family: 'Glegoo';
            font-size:1.8em;
            flex:1;
            align-self:flex-start;
            margin-right:15px;
        }
        .imagen {
            width:50%;
        }
        .imagen2{
            width:30%;
        }
        /* Propiedades iniciales (antes del primer clic: color verde)*/

        .fase0{
            width:150px;
            background-color:#cddc39;
            border:6px green solid;
            border-radius:12px;
            padding:2px 15px 8px;
        }


        /* Primer clic (color: azul)
        .boton_primerClic{
            width:150px;
            background-color:#2196f3;
            border:none;
            border-radius:0;
            padding:10px;
            color:white
        }
        */

        /* Segundo clic (color: violeta)
        .boton_segundoClic{
            width:200px;
            background-color:#9c27b0;
            font-size:1em;
            border:none;
            border-radius:0;
            padding:6px;
            color:white;
        }
        */
    </style>
    <script type="text/javascript">
        window.onload=inicio;

        function inicio(){
          fase0();
        }

        function fase0(){
          //entre dentro de este boton y rellene contenido que hemos copiado
            document.querySelector(".boton").innerHTML=`
            <div class="precio"></div>
            <div class="imagen"></div>
            </section>
            <div class="descripcion"></div>
        `
        document.querySelector(".precio").innerHTML=`2`;
        document.querySelector(".descripcion").innerHTML=`Cafe de Coombia`;
        document.querySelector(".imagen").innerHTML=`<img  src="cafe1.png">`;
        }

    </script>
</head>
<body>
    <div class="boton">
        <!--
            <section>
                <div class="precio"></div>
                <div class="imagen"></div>
